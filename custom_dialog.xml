<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_quit_learning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:paddingLeft="@dimen/text_margin_small"
        android:paddingRight="@dimen/text_margin_small"
        android:paddingTop="@dimen/text_margin_small"
        android:layout_marginLeft="@dimen/text_margin"
        android:layout_marginRight="@dimen/text_margin">

        <TextView
            android:id="@+id/tv_quit_learning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/text_margin_small"
            android:text="@string/text1"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_quit_learning"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/text_margin_small"
            android:layout_marginRight="@dimen/text_margin_small"
            android:layout_marginTop="@dimen/text_margin"
            android:gravity="center"
            android:text="@string/text2" />


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/rl_quit_learning"
        android:layout_marginLeft="@dimen/text_margin"
        android:layout_marginRight="@dimen/text_margin">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/shape2"
                android:layout_weight="0.1"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/transparent"
                android:layout_weight="0.1"
                />
        </LinearLayout>
      <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="1">
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="OK"
                android:layout_weight="0.3"
                android:layout_marginRight="10dp"
                android:id="@+id/btn_ok"
                style="@style/Widget.AppCompat.Button.Colored" />

        </LinearLayout>
    </RelativeLayout>

   </RelativeLayout>